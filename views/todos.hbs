<!DOCTYPE html>
  <html>
    <head>
      <meta charset="utf-8">
      <title>{{task.title}}</title>
      <script
      src="http://code.jquery.com/jquery-3.2.1.js"
      integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
      crossorigin="anonymous"></script>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
      <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
      <script src="https://use.fontawesome.com/f971beed2e.js"></script>
      <link rel="stylesheet" href="/css/styles.css">

    </head>
    <body>

      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/">
              <i class="fa fa-arrow-left" aria-hidden="true"></i>
            </a>
            <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModalAddTodo">
              Add Todo
            </button>
          </div>

        </div>
      </nav>
<div class="container">

<h1>Todos</h1>
<hr>
<p>{{message}}</p>
{{#each todos}}
  <div class="row todos" style="background-color:{{color}}">
    <div class="col-md-2">
      {{#if completed}}
        <div class="completedIcon">
          <i class="fa fa-check-square fa-2x" aria-hidden="true"></i>
          <i class="fa fa-check-square fa-2x" aria-hidden="true"></i>
          <i class="fa fa-check-square fa-2x" aria-hidden="true"></i>
          <i class="fa fa-check-square fa-2x" aria-hidden="true"></i>

        </div>
      {{else}}
        <form class="todoForm" action="/todos/{{_id}}?_method=PUT" method="POST">
          <input class="btn btn-Submit btn-primary" name="completeTodo" type="submit" value="COMPLETE">
        </form>
      {{/if}}
    </div>
    <div class="col-md-2">
      <h3 class="todoTitle">{{title}}</h3>
    </div>
    <div class="col-md-3">
      <p class="todoDate"><b>DATE ADDED:</b> {{dateStarted}}</p>
    </div>
    <div class="col-md-3">
      {{#if dateCompleted}}
        <p class="todoDate"><b>DATE FINISHED:</b> {{dateCompleted}}</p>
      {{/if}}
    </div>
    <div class="col-md-2">
      <form class="todoForm" action="/todos/{{_id}}?_method=DELETE" method="POST">
        <input type="submit" name="deleteTodo" class="btn btn-todoDelete btn-danger" value="DELETE">
      </form>
    </div>
  </div>
{{/each}}



